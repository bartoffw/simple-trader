{% extends "layout.twig" %}

{% set active_menu = 'strategies' %}

{% block title %}Strategy Manager - {{ app_name }}{% endblock %}

{% block page_title %}Strategy Manager{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="/tickers">Home</a></li>
    <li class="breadcrumb-item active">Strategies</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Available Strategies</h3>
                    <div class="card-tools">
                        <span class="badge badge-primary">{{ strategies|length }} strateg{{ strategies|length != 1 ? 'ies' : 'y' }}</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    {% if strategies|length > 0 %}
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 20%">Strategy Name</th>
                                    <th style="width: 45%">Description</th>
                                    <th style="width: 20%">Class Name</th>
                                    <th style="width: 8%" class="text-center">Methods</th>
                                    <th style="width: 7%" class="text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for strategy in strategies %}
                                    <tr>
                                        <td>
                                            <strong>{{ strategy.strategy_name }}</strong>
                                        </td>
                                        <td>
                                            {% set description = strategy.strategy_description|default('No description available.') %}
                                            {% set short_desc = description|split('.')|slice(0, 2)|join('.') %}
                                            {% if short_desc|length < description|length %}
                                                <span class="text-muted">{{ short_desc }}...</span>
                                            {% else %}
                                                <span class="text-muted">{{ description }}</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <code class="text-muted">{{ strategy.class_name }}</code>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge badge-info">{{ strategy.overridden_count }}</span>
                                        </td>
                                        <td class="text-right">
                                            <a href="/strategies/{{ strategy.class_name }}"
                                               class="btn btn-sm btn-primary"
                                               title="View Details">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="text-center p-5">
                            <i class="fas fa-project-diagram fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No strategies found in the project.</p>
                            <small class="text-muted">
                                Strategies should extend the <code>BaseStrategy</code> class and be placed in the <code>src/</code> directory.
                            </small>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Information Card -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="callout callout-info">
                <h5><i class="fas fa-info-circle"></i> About Strategies</h5>
                <p>
                    Trading strategies are classes that extend the <code>BaseStrategy</code> class.
                    Each strategy implements its own trading logic by overriding methods like
                    <code>onOpen()</code> and <code>onClose()</code>.
                </p>
                <p class="mb-0">
                    <i class="fas fa-lightbulb"></i>
                    <strong>Tip:</strong> Click "View" to see detailed information about each strategy,
                    including which methods are overridden and their implementations.
                </p>
            </div>
        </div>
    </div>
{% endblock %}
