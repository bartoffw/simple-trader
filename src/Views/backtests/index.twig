{% extends "layout.twig" %}

{% set active_menu = 'backtests' %}

{% block title %}Strategy Backtesting - {{ app_name }}{% endblock %}

{% block page_title %}Strategy Backtesting{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="/tickers">Home</a></li>
    <li class="breadcrumb-item active">Backtests</li>
{% endblock %}

{% block content %}
    <!-- Statistics Cards -->
    <div class="row">
        <div class="col-lg-3 col-6">
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>{{ stats.total }}</h3>
                    <p>Total Backtests</p>
                </div>
                <div class="icon">
                    <i class="fas fa-play-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-6">
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>{{ stats.completed }}</h3>
                    <p>Completed</p>
                </div>
                <div class="icon">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-6">
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>{{ stats.running }}</h3>
                    <p>Running</p>
                </div>
                <div class="icon">
                    <i class="fas fa-spinner"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-6">
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3>{{ stats.failed }}</h3>
                    <p>Failed</p>
                </div>
                <div class="icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Runs List -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Backtests</h3>
                    <div class="card-tools">
                        <a href="/backtests/create" class="btn btn-sm btn-success">
                            <i class="fas fa-plus"></i> New Backtest
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    {% if runs|length > 0 %}
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 5%">#</th>
                                    <th style="width: 20%">Name</th>
                                    <th style="width: 15%">Strategy</th>
                                    <th style="width: 15%">Tickers</th>
                                    <th style="width: 15%">Period</th>
                                    <th style="width: 10%" class="text-center">Status</th>
                                    <th style="width: 10%" class="text-right">Net Profit</th>
                                    <th style="width: 10%" class="text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for run in runs %}
                                    <tr>
                                        <td>{{ run.id }}</td>
                                        <td>
                                            <strong>{{ run.name }}</strong>
                                            {% if run.is_optimization %}
                                                <br><span class="badge badge-info badge-sm">Optimization</span>
                                            {% endif %}
                                        </td>
                                        <td><small>{{ run.strategy_class }}</small></td>
                                        <td><small>{{ run.ticker_symbols }}</small></td>
                                        <td><small>{{ run.start_date }}<br>to {{ run.end_date }}</small></td>
                                        <td class="text-center">
                                            {% if run.status == 'completed' %}
                                                <span class="badge badge-success">Completed</span>
                                            {% elseif run.status == 'running' %}
                                                <span class="badge badge-warning">
                                                    <i class="fas fa-spinner fa-spin"></i> Running
                                                </span>
                                            {% elseif run.status == 'failed' %}
                                                <span class="badge badge-danger">Failed</span>
                                            {% else %}
                                                <span class="badge badge-secondary">Pending</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-right">
                                            {% if run.metrics and run.metrics.net_profit is defined %}
                                                <span class="{{ run.metrics.net_profit >= 0 ? 'text-success' : 'text-danger' }}">
                                                    {{ run.metrics.net_profit|number_format(2) }}
                                                    <br><small>({{ run.metrics.net_profit_percent|number_format(2) }}%)</small>
                                                </span>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-right">
                                            <a href="/backtests/{{ run.id }}" class="btn btn-sm btn-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            {% if run.status != 'running' %}
                                                <form action="/backtests/{{ run.id }}/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this backtest?');">
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="text-center p-5">
                            <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No backtest runs yet.</p>
                            <a href="/backtests/create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Create First Backtest
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Information Card -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="callout callout-info">
                <h5><i class="fas fa-info-circle"></i> About Backtests</h5>
                <p>
                    Backtest runs execute your trading strategies against historical data.
                    Runs execute in the background, allowing you to navigate away and return later.
                </p>
                <p class="mb-0">
                    <i class="fas fa-lightbulb"></i>
                    <strong>Features:</strong> Real-time log viewing, optimization support, downloadable HTML reports,
                    and comprehensive performance metrics.
                </p>
            </div>
        </div>
    </div>
{% endblock %}

{% block extra_js %}
<script>
$(document).ready(function() {
    // Auto-refresh for running runs
    const hasRunningRuns = {{ (stats.running > 0 or stats.pending > 0) ? 'true' : 'false' }};
    const hasPendingRuns = {{ stats.pending > 0 ? 'true' : 'false' }};

    // Run health check if there are pending/running backtests
    if (hasRunningRuns) {
        // Run health check immediately
        runHealthCheck();

        // Run health check every 30 seconds
        setInterval(runHealthCheck, 30000);

        // Reload page every 10 seconds to show updates
        setTimeout(function() {
            location.reload();
        }, 10000);
    }

    function runHealthCheck() {
        $.ajax({
            url: '/backtests/health-check',
            method: 'POST',
            dataType: 'json',
            success: function(response) {
                if (response.success && response.stats.restarted > 0) {
                    console.log('Health check: ' + response.stats.restarted + ' backtest(s) restarted');
                }
            },
            error: function(xhr, status, error) {
                console.error('Health check failed:', error);
            }
        });
    }
});
</script>
{% endblock %}
