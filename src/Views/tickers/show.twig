{% extends "layout.twig" %}

{% set active_menu = 'tickers' %}

{% block title %}Ticker {{ ticker.symbol }} Details - {{ app_name }}{% endblock %}

{% block page_title %}Ticker Details{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="/tickers">Home</a></li>
    <li class="breadcrumb-item"><a href="/tickers">Tickers</a></li>
    <li class="breadcrumb-item active">{{ ticker.symbol }}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <!-- Ticker Information Card -->
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Ticker Information</h3>
                    <div class="card-tools">
                        {% if ticker.enabled %}
                            <span class="badge badge-success">Enabled</span>
                        {% else %}
                            <span class="badge badge-secondary">Disabled</span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">{{ ticker.id }}</dd>

                        <dt class="col-sm-4">Symbol</dt>
                        <dd class="col-sm-8"><strong>{{ ticker.symbol }}</strong></dd>

                        <dt class="col-sm-4">Exchange</dt>
                        <dd class="col-sm-8">{{ ticker.exchange }}</dd>

                        <dt class="col-sm-4">Data Source</dt>
                        <dd class="col-sm-8">
                            <span class="badge badge-info">{{ source_label }}</span>
                        </dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            {% if ticker.enabled %}
                                <span class="badge badge-success"><i class="fas fa-check-circle"></i> Enabled</span>
                            {% else %}
                                <span class="badge badge-secondary"><i class="fas fa-ban"></i> Disabled</span>
                            {% endif %}
                        </dd>

                        <dt class="col-sm-4">Created</dt>
                        <dd class="col-sm-8">{{ ticker.created_at }}</dd>

                        <dt class="col-sm-4">Last Updated</dt>
                        <dd class="col-sm-8">{{ ticker.updated_at }}</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a href="/tickers/{{ ticker.id }}/edit" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <form method="POST" action="/tickers/{{ ticker.id }}/toggle" style="display: inline;">
                        <button type="submit" class="btn btn-{% if ticker.enabled %}secondary{% else %}success{% endif %}"
                                onclick="return confirm('Are you sure you want to {% if ticker.enabled %}disable{% else %}enable{% endif %} this ticker?')">
                            <i class="fas fa-{% if ticker.enabled %}toggle-off{% else %}toggle-on{% endif %}"></i>
                            {% if ticker.enabled %}Disable{% else %}Enable{% endif %}
                        </button>
                    </form>
                    <form method="POST" action="/tickers/{{ ticker.id }}/delete" style="display: inline;" class="float-right">
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete ticker {{ ticker.symbol }}? This action cannot be undone.')">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Audit Log Card -->
        <div class="col-md-6">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Change History</h3>
                </div>
                <div class="card-body p-0">
                    {% if audit_log|length > 0 %}
                        <ul class="list-group list-group-flush">
                            {% for entry in audit_log %}
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            {% if entry.action == 'created' %}
                                                <span class="badge badge-success"><i class="fas fa-plus"></i> Created</span>
                                            {% elseif entry.action == 'updated' %}
                                                <span class="badge badge-warning"><i class="fas fa-edit"></i> Updated</span>
                                            {% elseif entry.action == 'deleted' %}
                                                <span class="badge badge-danger"><i class="fas fa-trash"></i> Deleted</span>
                                            {% elseif entry.action == 'enabled' %}
                                                <span class="badge badge-success"><i class="fas fa-toggle-on"></i> Enabled</span>
                                            {% elseif entry.action == 'disabled' %}
                                                <span class="badge badge-secondary"><i class="fas fa-toggle-off"></i> Disabled</span>
                                            {% else %}
                                                <span class="badge badge-info">{{ entry.action }}</span>
                                            {% endif %}
                                        </div>
                                        <small class="text-muted">{{ entry.timestamp }}</small>
                                    </div>
                                    {% if entry.new_values %}
                                        <small class="text-muted d-block mt-1">
                                            <i class="fas fa-info-circle"></i> Changes: {{ entry.new_values }}
                                        </small>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <div class="text-center p-4">
                            <i class="fas fa-history fa-2x text-muted mb-2"></i>
                            <p class="text-muted">No change history available</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Quotation Data Card -->
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Quotation Data</h3>
                </div>
                <div class="card-body">
                    <div id="quote-status">
                        {% if date_range %}
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="info-box">
                                        <span class="info-box-icon bg-info"><i class="fas fa-calendar-alt"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text">First Quote</span>
                                            <span class="info-box-number">{{ date_range.first_date }}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="info-box">
                                        <span class="info-box-icon bg-success"><i class="fas fa-calendar-check"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text">Latest Quote</span>
                                            <span class="info-box-number">{{ date_range.last_date }}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="info-box">
                                        <span class="info-box-icon bg-warning"><i class="fas fa-database"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text">Total Quotes</span>
                                            <span class="info-box-number">{{ date_range.count }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                No quotation data available for this ticker.
                            </div>
                        {% endif %}
                    </div>

                    <!-- Fetch Quotes Button -->
                    <div class="mt-3">
                        <button type="button" class="btn btn-primary" id="fetch-quotes-btn" data-ticker-id="{{ ticker.id }}">
                            <i class="fas fa-download"></i> Fetch Quotes
                        </button>
                        <small class="text-muted ml-2">
                            Click to fetch latest quotes from {{ source_label }}
                        </small>
                    </div>

                    <!-- Progress and Messages -->
                    <div id="fetch-progress" class="mt-3" style="display: none;">
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                                 style="width: 100%">Fetching quotes...</div>
                        </div>
                    </div>
                    <div id="fetch-message" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="row">
        <div class="col-12">
            <a href="/tickers" class="btn btn-default">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
{% endblock %}

{% block extra_js %}
<script>
$(document).ready(function() {
    $('#fetch-quotes-btn').click(function() {
        const tickerId = $(this).data('ticker-id');
        const $btn = $(this);
        const $progress = $('#fetch-progress');
        const $message = $('#fetch-message');

        // Disable button and show progress
        $btn.prop('disabled', true);
        $progress.show();
        $message.html('');

        // Make AJAX request
        $.ajax({
            url: '/tickers/' + tickerId + '/fetch-quotes',
            method: 'POST',
            dataType: 'json',
            success: function(response) {
                $progress.hide();
                $btn.prop('disabled', false);

                if (response.success) {
                    // Show success message
                    let message = '<div class="alert alert-success alert-dismissible">' +
                        '<button type="button" class="close" data-dismiss="alert">&times;</button>' +
                        '<i class="fas fa-check-circle"></i> ' +
                        '<strong>Success!</strong> ' + response.message +
                        '<br><small>Fetched ' + response.count + ' quotes</small>';

                    if (response.date_range) {
                        message += '<br><small>Date range: ' + response.date_range.first_date +
                                   ' to ' + response.date_range.last_date + '</small>';
                    }

                    message += '</div>';
                    $message.html(message);

                    // Update the quote status section
                    if (response.date_range) {
                        const statusHtml = '<div class="row">' +
                            '<div class="col-md-4">' +
                                '<div class="info-box">' +
                                    '<span class="info-box-icon bg-info"><i class="fas fa-calendar-alt"></i></span>' +
                                    '<div class="info-box-content">' +
                                        '<span class="info-box-text">First Quote</span>' +
                                        '<span class="info-box-number">' + response.date_range.first_date + '</span>' +
                                    '</div>' +
                                '</div>' +
                            '</div>' +
                            '<div class="col-md-4">' +
                                '<div class="info-box">' +
                                    '<span class="info-box-icon bg-success"><i class="fas fa-calendar-check"></i></span>' +
                                    '<div class="info-box-content">' +
                                        '<span class="info-box-text">Latest Quote</span>' +
                                        '<span class="info-box-number">' + response.date_range.last_date + '</span>' +
                                    '</div>' +
                                '</div>' +
                            '</div>' +
                            '<div class="col-md-4">' +
                                '<div class="info-box">' +
                                    '<span class="info-box-icon bg-warning"><i class="fas fa-database"></i></span>' +
                                    '<div class="info-box-content">' +
                                        '<span class="info-box-text">Total Quotes</span>' +
                                        '<span class="info-box-number">' + response.date_range.count + '</span>' +
                                    '</div>' +
                                '</div>' +
                            '</div>' +
                        '</div>';

                        $('#quote-status').html(statusHtml);
                    }
                } else {
                    // Show error message
                    $message.html(
                        '<div class="alert alert-danger alert-dismissible">' +
                        '<button type="button" class="close" data-dismiss="alert">&times;</button>' +
                        '<i class="fas fa-exclamation-triangle"></i> ' +
                        '<strong>Error!</strong> ' + response.message +
                        '</div>'
                    );
                }
            },
            error: function(xhr, status, error) {
                $progress.hide();
                $btn.prop('disabled', false);

                let errorMsg = 'An error occurred while fetching quotes.';
                if (xhr.responseJSON && xhr.responseJSON.message) {
                    errorMsg = xhr.responseJSON.message;
                } else if (xhr.responseText) {
                    errorMsg += ' ' + xhr.responseText;
                }

                $message.html(
                    '<div class="alert alert-danger alert-dismissible">' +
                    '<button type="button" class="close" data-dismiss="alert">&times;</button>' +
                    '<i class="fas fa-exclamation-triangle"></i> ' +
                    '<strong>Error!</strong> ' + errorMsg +
                    '</div>'
                );
            }
        });
    });
});
</script>
{% endblock %}
