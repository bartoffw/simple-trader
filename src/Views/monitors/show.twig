{% extends "layout.twig" %}

{% set active_menu = 'monitors' %}

{% block title %}Monitor: {{ monitor.name }} - {{ app_name }}{% endblock %}

{% block page_title %}Monitor Details{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="/tickers">Home</a></li>
    <li class="breadcrumb-item"><a href="/monitors">Monitors</a></li>
    <li class="breadcrumb-item active">{{ monitor.name }}</li>
{% endblock %}

{% block content %}
    <!-- Monitor Header -->
    <div class="row">
        <div class="col-12">
            <div class="callout callout-info">
                <h5><i class="fas fa-chart-line"></i> {{ monitor.name }}</h5>
                <p class="mb-1"><strong>Strategy:</strong> {{ strategy_info.strategy_name }}</p>
                <p class="mb-1"><strong>Tickers:</strong> {{ ticker_symbols|join(', ') }}</p>
                <p class="mb-0"><strong>Monitoring Since:</strong> {{ monitor.start_date }}</p>
            </div>
        </div>
    </div>

    <!-- Current Status Cards -->
    <div class="row">
        <div class="col-lg-3 col-6">
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>{{ monitor.status|upper }}</h3>
                    <p>Status</p>
                </div>
                <div class="icon">
                    <i class="fas {% if monitor.status == 'active' %}fa-play-circle{% elseif monitor.status == 'stopped' %}fa-stop-circle{% else %}fa-spinner{% endif %}"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-6">
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>${{ latest_snapshot.equity|number_format(2) ?? monitor.initial_capital|number_format(2) }}</h3>
                    <p>Current Equity</p>
                </div>
                <div class="icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-6">
            <div class="small-box {% if latest_snapshot.cumulative_return >= 0 %}bg-success{% else %}bg-danger{% endif %}">
                <div class="inner">
                    <h3>{{ latest_snapshot.cumulative_return|number_format(2) ?? '0.00' }}%</h3>
                    <p>Total Return</p>
                </div>
                <div class="icon">
                    <i class="fas fa-percentage"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-6">
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>{{ monitor.last_processed_date ?? 'N/A' }}</h3>
                    <p>Last Updated</p>
                </div>
                <div class="icon">
                    <i class="fas fa-calendar"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="row mb-3">
        <div class="col-12">
            {% if monitor.status == 'active' %}
                <form method="POST" action="/monitors/{{ monitor.id }}/stop" style="display: inline;">
                    <button type="submit" class="btn btn-warning"
                            onclick="return confirm('Are you sure you want to stop this monitor?')">
                        <i class="fas fa-stop"></i> Stop Monitor
                    </button>
                </form>
            {% elseif monitor.status == 'stopped' %}
                <form method="POST" action="/monitors/{{ monitor.id }}/activate" style="display: inline;">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-play"></i> Activate Monitor
                    </button>
                </form>
            {% endif %}
            <form method="POST" action="/monitors/{{ monitor.id }}/delete" style="display: inline;">
                <button type="submit" class="btn btn-danger"
                        onclick="return confirm('Are you sure you want to delete this monitor? This action cannot be undone.')">
                    <i class="fas fa-trash"></i> Delete Monitor
                </button>
            </form>
        </div>
    </div>

    <!-- Equity Chart -->
    {% if snapshots|length > 0 %}
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-chart-area"></i> Equity Curve</h3>
                </div>
                <div class="card-body">
                    <canvas id="equityChart" style="height: 300px;"></canvas>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Performance Metrics -->
    <div class="row">
        <div class="col-md-6">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Backtest Performance</h3>
                </div>
                <div class="card-body">
                    {% if backtest_metrics %}
                        <dl class="row">
                            <dt class="col-sm-6">Period:</dt>
                            <dd class="col-sm-6">{{ backtest_metrics.period_start }} to {{ backtest_metrics.period_end }}</dd>

                            <dt class="col-sm-6">Total Return:</dt>
                            <dd class="col-sm-6"><strong>{{ backtest_metrics.total_return|number_format(2) }}%</strong></dd>

                            <dt class="col-sm-6">Total Trades:</dt>
                            <dd class="col-sm-6">{{ backtest_metrics.total_trades }}</dd>

                            <dt class="col-sm-6">Win Rate:</dt>
                            <dd class="col-sm-6">{{ backtest_metrics.win_rate|number_format(2) }}%</dd>

                            <dt class="col-sm-6">Max Drawdown:</dt>
                            <dd class="col-sm-6">{{ backtest_metrics.max_drawdown|number_format(2) }}%</dd>

                            <dt class="col-sm-6">Final Equity:</dt>
                            <dd class="col-sm-6">${{ backtest_metrics.final_equity|number_format(2) }}</dd>
                        </dl>
                    {% else %}
                        <p class="text-muted">No backtest metrics available</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Forward Test Performance</h3>
                </div>
                <div class="card-body">
                    {% if forward_metrics %}
                        <dl class="row">
                            <dt class="col-sm-6">Period:</dt>
                            <dd class="col-sm-6">{{ forward_metrics.period_start }} to {{ forward_metrics.period_end }}</dd>

                            <dt class="col-sm-6">Total Return:</dt>
                            <dd class="col-sm-6"><strong>{{ forward_metrics.total_return|number_format(2) }}%</strong></dd>

                            <dt class="col-sm-6">Total Trades:</dt>
                            <dd class="col-sm-6">{{ forward_metrics.total_trades }}</dd>

                            <dt class="col-sm-6">Win Rate:</dt>
                            <dd class="col-sm-6">{{ forward_metrics.win_rate|number_format(2) }}%</dd>

                            <dt class="col-sm-6">Max Drawdown:</dt>
                            <dd class="col-sm-6">{{ forward_metrics.max_drawdown|number_format(2) }}%</dd>

                            <dt class="col-sm-6">Current Equity:</dt>
                            <dd class="col-sm-6">${{ forward_metrics.final_equity|number_format(2) }}</dd>
                        </dl>
                    {% else %}
                        <p class="text-muted">No forward test metrics available yet</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Current Positions -->
    <div class="row">
        <div class="col-12">
            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-briefcase"></i> Current Positions</h3>
                </div>
                <div class="card-body p-0">
                    {% if current_positions|length > 0 %}
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Ticker</th>
                                    <th class="text-right">Quantity</th>
                                    <th class="text-right">Entry Price</th>
                                    <th class="text-right">Current Price</th>
                                    <th class="text-right">P&L</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for position in current_positions %}
                                    <tr>
                                        <td><strong>{{ position.ticker }}</strong></td>
                                        <td class="text-right">{{ position.quantity }}</td>
                                        <td class="text-right">${{ position.entry_price|number_format(2) }}</td>
                                        <td class="text-right">${{ position.current_price|number_format(2) }}</td>
                                        <td class="text-right">
                                            {% set pnl = position.pnl ?? 0 %}
                                            <span class="{% if pnl >= 0 %}text-success{% else %}text-danger{% endif %}">
                                                ${{ pnl|number_format(2) }}
                                            </span>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="text-center p-4">
                            <p class="text-muted">No open positions</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Trades -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-history"></i> Recent Trades</h3>
                </div>
                <div class="card-body p-0">
                    {% if trades|length > 0 %}
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Ticker</th>
                                    <th>Action</th>
                                    <th class="text-right">Quantity</th>
                                    <th class="text-right">Price</th>
                                    <th class="text-right">Total Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for trade in trades %}
                                    <tr>
                                        <td>{{ trade.date }}</td>
                                        <td><strong>{{ trade.ticker_symbol }}</strong></td>
                                        <td>
                                            {% if trade.action == 'buy' %}
                                                <span class="badge badge-success">BUY</span>
                                            {% else %}
                                                <span class="badge badge-danger">SELL</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-right">{{ trade.quantity }}</td>
                                        <td class="text-right">${{ trade.price|number_format(2) }}</td>
                                        <td class="text-right">${{ trade.total_value|number_format(2) }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="text-center p-4">
                            <p class="text-muted">No trades yet</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="row">
        <div class="col-12">
            <a href="/monitors" class="btn btn-default">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
{% endblock %}

{% block extra_js %}
{% if snapshots|length > 0 %}
<script>
$(document).ready(function() {
    // Equity Chart
    var ctx = document.getElementById('equityChart').getContext('2d');
    var equityChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: [{% for snapshot in snapshots %}'{{ snapshot.date }}'{% if not loop.last %}, {% endif %}{% endfor %}],
            datasets: [{
                label: 'Equity',
                data: [{% for snapshot in snapshots %}{{ snapshot.equity }}{% if not loop.last %}, {% endif %}{% endfor %}],
                borderColor: 'rgb(75, 192, 192)',
                backgroundColor: 'rgba(75, 192, 192, 0.1)',
                tension: 0.1,
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: true
                },
                tooltip: {
                    mode: 'index',
                    intersect: false
                }
            },
            scales: {
                y: {
                    beginAtZero: false,
                    ticks: {
                        callback: function(value) {
                            return '$' + value.toLocaleString();
                        }
                    }
                }
            }
        }
    });
});
</script>
{% endif %}
{% endblock %}
