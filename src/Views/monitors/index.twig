{% extends "layout.twig" %}

{% set active_menu = 'monitors' %}

{% block title %}Strategy Monitoring - {{ app_name }}{% endblock %}

{% block page_title %}Strategy Monitoring{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="/tickers">Home</a></li>
    <li class="breadcrumb-item active">Monitors</li>
{% endblock %}

{% block content %}
    <!-- Statistics Cards -->
    <div class="row">
        <div class="col-lg-3 col-6">
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>{{ stats.total_monitors }}</h3>
                    <p>Total Monitors</p>
                </div>
                <div class="icon">
                    <i class="fas fa-chart-line"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-6">
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>{{ stats.active_monitors }}</h3>
                    <p>Active</p>
                </div>
                <div class="icon">
                    <i class="fas fa-play-circle"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-6">
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>{{ stats.initializing_monitors }}</h3>
                    <p>Initializing</p>
                </div>
                <div class="icon">
                    <i class="fas fa-spinner"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-6">
            <div class="small-box bg-secondary">
                <div class="inner">
                    <h3>{{ stats.stopped_monitors }}</h3>
                    <p>Stopped</p>
                </div>
                <div class="icon">
                    <i class="fas fa-stop-circle"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Monitors List Card -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Strategy Monitors</h3>
                    <div class="card-tools">
                        <a href="/monitors/create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Create Monitor
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    {% if monitors|length > 0 %}
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 5%">ID</th>
                                    <th style="width: 20%">Monitor Name</th>
                                    <th style="width: 15%">Strategy</th>
                                    <th style="width: 10%" class="text-center">Status</th>
                                    <th style="width: 10%" class="text-right">Initial Capital</th>
                                    <th style="width: 10%" class="text-right">Current Equity</th>
                                    <th style="width: 10%" class="text-right">Return</th>
                                    <th style="width: 10%">Last Updated</th>
                                    <th style="width: 10%" class="text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for monitor in monitors %}
                                    <tr>
                                        <td>{{ monitor.id }}</td>
                                        <td><strong>{{ monitor.name }}</strong></td>
                                        <td>
                                            <span class="badge badge-info">{{ monitor.strategy_class }}</span>
                                        </td>
                                        <td class="text-center">
                                            {% if monitor.status == 'active' %}
                                                <span class="badge badge-success">Active</span>
                                            {% elseif monitor.status == 'stopped' %}
                                                <span class="badge badge-secondary">Stopped</span>
                                            {% elseif monitor.status == 'initializing' %}
                                                <span class="badge badge-warning">Initializing</span>
                                            {% else %}
                                                <span class="badge badge-light">{{ monitor.status }}</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-right">
                                            <strong>${{ monitor.initial_capital|number_format(2) }}</strong>
                                        </td>
                                        <td class="text-right">
                                            <strong>${{ monitor.current_equity|number_format(2) }}</strong>
                                        </td>
                                        <td class="text-right">
                                            {% set return_pct = monitor.cumulative_return %}
                                            {% if return_pct >= 0 %}
                                                <span class="text-success">
                                                    <strong>+{{ return_pct|number_format(2) }}%</strong>
                                                </span>
                                            {% else %}
                                                <span class="text-danger">
                                                    <strong>{{ return_pct|number_format(2) }}%</strong>
                                                </span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <small class="text-muted">{{ monitor.last_processed_date ?? 'N/A' }}</small>
                                        </td>
                                        <td class="text-right">
                                            <a href="/monitors/{{ monitor.id }}" class="btn btn-sm btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="text-center p-5">
                            <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No strategy monitors created yet.</p>
                            <a href="/monitors/create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Create Your First Monitor
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
