{% extends 'layout.twig' %}

{% block title %}{{ pageTitle }} - {{ app_name }}{% endblock %}

{% block content %}
<!-- Content Header -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-book mr-2"></i>
                    Documentation
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i> Home</a></li>
                    <li class="breadcrumb-item active">Documentation</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-list mr-2"></i>
                            Available Documentation
                        </h3>
                    </div>
                    <div class="card-body">
                        <p class="lead">
                            Welcome to the Simple-Trader documentation. Browse through the categories below to find the information you need.
                        </p>

                        {% for category, docs in documentationFiles %}
                            <div class="documentation-category mb-4">
                                <h3 class="text-primary">
                                    <i class="fas fa-folder-open mr-2"></i>
                                    {{ category }}
                                </h3>
                                <div class="row">
                                    {% for slug, doc in docs %}
                                        <div class="col-md-6 col-lg-4 mb-3">
                                            <div class="card h-100">
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <i class="fas fa-{{ doc.icon }} mr-2 text-info"></i>
                                                        {{ doc.title }}
                                                    </h5>
                                                    <p class="card-text text-muted small">
                                                        {{ doc.file }}
                                                    </p>
                                                    <a href="/docs/{{ slug }}" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-book-open mr-1"></i>
                                                        Read Documentation
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            {% if not loop.last %}
                                <hr class="my-4">
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block styles %}
<style>
.documentation-category h3 {
    border-bottom: 2px solid #007bff;
    padding-bottom: 10px;
    margin-bottom: 20px;
}

.card.h-100 {
    transition: transform 0.2s, box-shadow 0.2s;
}

.card.h-100:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}
</style>
{% endblock %}
