{% extends 'layout.twig' %}

{% block title %}{{ title }} - Documentation - {{ app_name }}{% endblock %}

{% block content %}
<!-- Content Header -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-book mr-2"></i>
                    {{ title }}
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i> Home</a></li>
                    <li class="breadcrumb-item"><a href="/docs"><i class="fas fa-book"></i> Documentation</a></li>
                    <li class="breadcrumb-item active">{{ title }}</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar with table of contents (optional - could be added later) -->
            <div class="col-lg-3 d-none d-lg-block">
                <div class="card card-outline card-info sticky-top" style="top: 20px;">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-list mr-2"></i>
                            All Documentation
                        </h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            {% for category, docs in documentationFiles %}
                                <div class="list-group-item bg-light text-bold">
                                    {{ category }}
                                </div>
                                {% for doc_slug, doc in docs %}
                                    <a href="/docs/{{ doc_slug }}"
                                       class="list-group-item list-group-item-action {% if doc_slug == slug %}active{% endif %}">
                                        <i class="fas fa-{{ doc.icon }} mr-2"></i>
                                        {{ doc.title }}
                                    </a>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/docs" class="btn btn-sm btn-outline-primary btn-block">
                            <i class="fas fa-arrow-left mr-1"></i>
                            Back to Index
                        </a>
                    </div>
                </div>
            </div>

            <!-- Documentation content -->
            <div class="col-lg-9">
                <div class="card card-primary card-outline">
                    <div class="card-body documentation-content">
                        {{ content|raw }}
                    </div>
                    <div class="card-footer text-center">
                        <a href="/docs" class="btn btn-primary">
                            <i class="fas fa-arrow-left mr-1"></i>
                            Back to Documentation Index
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block styles %}
<style>
/* Documentation styling */
.documentation-content {
    font-size: 16px;
    line-height: 1.8;
    padding: 30px;
}

.documentation-content h1 {
    font-size: 2.5em;
    font-weight: bold;
    margin-top: 0;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 3px solid #007bff;
}

.documentation-content h2 {
    font-size: 2em;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.3rem;
    border-bottom: 2px solid #e0e0e0;
}

.documentation-content h3 {
    font-size: 1.5em;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.8rem;
}

.documentation-content h4 {
    font-size: 1.25em;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
}

.documentation-content h5,
.documentation-content h6 {
    font-size: 1.1em;
    font-weight: 600;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
}

.documentation-content p {
    margin-bottom: 1rem;
}

.documentation-content ul,
.documentation-content ol {
    margin-bottom: 1rem;
    padding-left: 2rem;
}

.documentation-content li {
    margin-bottom: 0.5rem;
}

.documentation-content code {
    background-color: #f4f4f4;
    padding: 2px 6px;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
    color: #e83e8c;
}

.documentation-content pre {
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 5px;
    padding: 1rem;
    overflow-x: auto;
    margin-bottom: 1rem;
}

.documentation-content pre code {
    background-color: transparent;
    padding: 0;
    color: #212529;
    font-size: 0.9em;
}

.documentation-content blockquote {
    border-left: 4px solid #17a2b8;
    padding-left: 1rem;
    margin: 1.5rem 0;
}

.documentation-content blockquote p {
    margin-bottom: 0;
}

.documentation-content img {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    margin: 1rem 0;
}

.documentation-content a {
    color: #007bff;
    text-decoration: none;
}

.documentation-content a:hover {
    text-decoration: underline;
}

.documentation-content hr {
    margin: 2rem 0;
    border-top: 1px solid #dee2e6;
}

/* Table styling */
.documentation-content .table-responsive {
    margin-bottom: 1rem;
}

.documentation-content table {
    margin-bottom: 1rem;
}

.documentation-content table th {
    background-color: #007bff;
    color: white;
    font-weight: 600;
}

.documentation-content table td,
.documentation-content table th {
    padding: 0.75rem;
    vertical-align: top;
}

/* Anchor links */
.documentation-content h2 a,
.documentation-content h3 a,
.documentation-content h4 a,
.documentation-content h5 a,
.documentation-content h6 a {
    opacity: 0;
    transition: opacity 0.2s;
}

.documentation-content h2:hover a,
.documentation-content h3:hover a,
.documentation-content h4:hover a,
.documentation-content h5:hover a,
.documentation-content h6:hover a {
    opacity: 1;
}

/* Sidebar */
.sticky-top {
    position: sticky;
    z-index: 1020;
    max-height: calc(100vh - 40px);
    overflow-y: auto;
}

.list-group-item.active {
    background-color: #007bff;
    border-color: #007bff;
}

/* Print styles */
@media print {
    .sticky-top,
    .card-footer,
    .breadcrumb {
        display: none !important;
    }

    .col-lg-9 {
        width: 100% !important;
    }

    .documentation-content {
        padding: 0;
    }
}

/* Mobile responsiveness */
@media (max-width: 992px) {
    .documentation-content {
        padding: 15px;
    }

    .documentation-content h1 {
        font-size: 2em;
    }

    .documentation-content h2 {
        font-size: 1.75em;
    }
}
</style>
{% endblock %}

{% block scripts %}
<script>
// Smooth scrolling for anchor links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }
    });
});
</script>
{% endblock %}
